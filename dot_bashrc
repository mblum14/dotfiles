set -o vi

HISTCONTROL=ignoreboth
HISTSIZE=1000
HISTFILESIZE=2000

export EDITOR=/opt/homebrew/bin/nvim

alias ll='eza --all --classify --icons --group-directories-first --sort=extension --long --group'

export PATH="$HOME/.cargo/bin":/opt/homebrew/opt/ruby/bin":/opt/homebrew/lib/ruby/gems/3.3.0/bin":"/opt/homebrew/bin":"/usr/local/opt/python/libexec/bin:"/opt/homebrew/opt/python@3.12/libexec/bin":$PATH"

# For compilers to find ruby you may need to set:
export LDFLAGS="-L/opt/homebrew/opt/ruby/lib"
export CPPFLAGS="-I/opt/homebrew/opt/ruby/include"

export VOLTA_HOME="$HOME/.volta"
export PATH="$VOLTA_HOME/bin:$PATH"

for bashrc in $(find "$HOME/.config/bashrc.d" -name "*.sh" | sort); do
  # shellcheck source=/dev/null
  source "${bashrc}"
done

for completion in $(find "$HOME/.config/bashrc.d/completion.d" -name "*.sh" | sort); do
  # shellcheck source=/dev/null
  source "${completion}"
done

eval "$(starship init bash)"
eval "$(fzf --bash)"
